<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.android.systemui.screenshot.magcomm.widget.ScreenShotView
        android:id="@+id/view_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal" >
		<LinearLayout
            android:layout_width="0dip"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:background="@drawable/ic_btn_cancel"/>
	</LinearLayout>
        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rbt_free"
                android:layout_width="wrap_content"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:checked="true"
                android:button="@drawable/radio_free"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/rbt_rect"
                android:layout_width="wrap_content"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:button="@drawable/radio_rect"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/rbt_rectf"
                android:layout_width="wrap_content"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:button="@drawable/radio_rectf"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/rbt_heart"
                android:layout_width="wrap_content"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:button="@drawable/radio_heart"
                android:gravity="center" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_share"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_reset" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_reset"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_save" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes_area"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>