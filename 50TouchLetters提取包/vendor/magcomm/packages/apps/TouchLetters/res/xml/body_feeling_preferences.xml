<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory 
        android:title="@string/open_setting" >
        <SwitchPreference
            android:title="@string/body_feeling_setting"
            android:key="body_feeling"
            android:summary="@string/is_open" 
            android:summaryOff="@string/close"
            android:summaryOn="@string/open"
            android:persistent="true" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/body_feeling_setting_title"
        android:key="bodyfeeling_category_key"> 
        <CheckBoxPreference 
            android:title="@string/free_screenshots" 
            android:key="free_screenshots_key"
            android:persistent="true"
            android:widgetLayout="@layout/vivo_checkbox" />
    </PreferenceCategory>
</PreferenceScreen>
