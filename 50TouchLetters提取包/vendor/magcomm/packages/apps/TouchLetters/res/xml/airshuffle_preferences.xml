<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory 
        android:title="@string/open_setting" >
        <SwitchPreference
            android:title="@string/ps_setting"
            android:key="ps_touch"
            android:summary="@string/is_open" 
            android:summaryOff="@string/close"
            android:summaryOn="@string/open"
            android:persistent="true" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/ps_setting_title" >
        <CheckBoxPreference 
            android:title="@string/ps_gallery_setting" 
            android:key="ps_gallery_key" 
            android:summary="@string/ps_gallery_setting_summary"  
            android:persistent="true"
            android:widgetLayout="@layout/vivo_checkbox" />
        <CheckBoxPreference
            android:title="@string/ps_launcher_setting" 
            android:key="ps_launcher_key" 
            android:summary="@string/ps_launcher_setting_summary" 
            android:persistent="true"
            android:widgetLayout="@layout/vivo_checkbox" />
        <CheckBoxPreference 
            android:title="@string/ps_music_setting" 
            android:key="ps_music_key" 
            android:summary="@string/ps_music_setting_summary"  
            android:persistent="true"
            android:widgetLayout="@layout/vivo_checkbox" />
        <CheckBoxPreference 
            android:title="@string/ps_camera_setting" 
            android:key="ps_camera_key" 
            android:summary="@string/ps_camera_setting_summary"  
            android:persistent="true"
            android:widgetLayout="@layout/vivo_checkbox" />
        <CheckBoxPreference 
            android:title="@string/ps_fm_setting" 
            android:key="ps_fm_key" 
            android:summary="@string/ps_fm_setting_summary"  
            android:persistent="true"
            android:widgetLayout="@layout/vivo_checkbox" />
    </PreferenceCategory>
</PreferenceScreen>
